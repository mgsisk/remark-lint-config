{
  "name": "@mgsisk/remark-lint-config",
  "main": "src/index.js",
  "type": "module",
  "version": "1.0.0",
  "description": "Opinionated remark-lint configuration for writing Markdown.",
  "keywords": [
    "markdown",
    "remark",
    "remark-lint",
    "remark-lint-config"
  ],
  "homepage": "https://github.com/mgsisk/remark-lint-config#readme",
  "bugs": "https://github.com/mgsisk/remark-lint-config/issues",
  "license": "ISC",
  "author": "Michael Sisk <me@mgsisk.com> (https://mgsisk.com)",
  "funding": "https://github.com/mgsisk/remark-lint-config?sponsor=1",
  "files": [
    "src/"
  ],
  "directories": {
    "doc": "docs",
    "lib": "src",
    "test": "test"
  },
  "repository": "github:mgsisk/remark-lint-config",
  "scripts": {
    "fix.js": "eslint --fix '**/*.js'",
    "fix.md": "remark . .github/ --ignore-pattern 'LICENSE*' -o",
    "format": "prettier -uw .",
    "lint.js": "eslint '**/*.js'",
    "lint.json": "YAMLLINT_SCHEMA=JSON_SCHEMA yamllint '**/*.json' '**/.*.json'",
    "lint.md": "remark . .github/ --ignore-pattern 'LICENSE*'",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "test": "tap test",
    "preversion": "npm test",
    "version": "git add --all",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-lint": "^9.1.2",
    "remark-lint-checkbox-content-indent": "^4.1.2",
    "remark-lint-heading-whitespace": "^1.0.0",
    "remark-lint-linebreak-style": "^3.1.2",
    "remark-lint-match-punctuation": "^0.2.1",
    "remark-lint-no-duplicate-headings-in-section": "^3.1.2",
    "remark-lint-no-empty-sections": "^4.0.0",
    "remark-lint-no-empty-url": "^3.1.2",
    "remark-lint-no-heading-indent": "^4.1.2",
    "remark-lint-no-heading-like-paragraph": "^3.1.2",
    "remark-lint-no-html": "^3.1.2",
    "remark-lint-no-paragraph-content-indent": "^4.1.2",
    "remark-lint-no-reference-like-url": "^3.1.2",
    "remark-lint-no-repeat-punctuation": "^0.1.4",
    "remark-lint-no-tabs": "^3.1.2",
    "remark-lint-no-unneeded-full-reference-image": "^3.1.2",
    "remark-lint-no-unneeded-full-reference-link": "^3.1.2",
    "remark-lint-no-url-trailing-slash": "^3.0.1",
    "remark-lint-strikethrough-marker": "^2.1.2",
    "remark-lint-write-good": "^1.2.0",
    "remark-preset-lint-consistent": "^5.1.2",
    "remark-preset-lint-markdown-style-guide": "^5.1.3",
    "remark-preset-lint-recommended": "^6.1.3"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^4.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "prettier": "^3.1.1",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.0",
    "tap": "^18.6.1",
    "yaml-lint": "^1.7.0"
  }
}
