{
  "name": "@mgsisk/remark-lint-config",
  "version": "0.3.0",
  "description": "Opinionated remark-lint configuration for writing Markdown.",
  "main": "src/index.js",
  "scripts": {
    "fix.js": "eslint --fix '**/*.js' '**/.*.js'",
    "lint.js": "eslint '**/*.js' '**/.*.js'",
    "lint.json": "printf 'package-lock.json package.json' | xargs -n1 jsonlint -q",
    "lint.md": "remark . .github/ --ignore-pattern 'LICENSE*'",
    "lint.sh": "shellcheck *.sh",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "test": "tap test",
    "preversion": "npm test",
    "version": "git add --all",
    "postversion": "git push --follow-tags"
  },
  "repository": "github:mgsisk/remark-lint-config",
  "keywords": [
    "markdown",
    "remark",
    "remark-lint",
    "remark-lint-config"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": "https://github.com/mgsisk/remark-lint-config/issues",
  "homepage": "https://github.com/mgsisk/remark-lint-config",
  "funding": "https://github.com/mgsisk/remark-lint-config?sponsor=1",
  "files": [
    "src"
  ],
  "directories": {
    "doc": "docs",
    "lib": "src",
    "test": "test"
  },
  "dependencies": {
    "remark-frontmatter": "^2.0.0",
    "remark-lint": "^7.0.0",
    "remark-lint-checkbox-content-indent": "^2.0.0",
    "remark-lint-heading-whitespace": "^1.0.0",
    "remark-lint-linebreak-style": "^2.0.0",
    "remark-lint-no-duplicate-headings-in-section": "^2.0.0",
    "remark-lint-no-empty-sections": "^3.0.0",
    "remark-lint-no-empty-url": "^2.0.0",
    "remark-lint-no-heading-indent": "^2.0.0",
    "remark-lint-no-heading-like-paragraph": "^2.0.0",
    "remark-lint-no-html": "^2.0.0",
    "remark-lint-no-paragraph-content-indent": "^2.0.0",
    "remark-lint-no-reference-like-url": "^2.0.0",
    "remark-lint-no-tabs": "^2.0.0",
    "remark-lint-no-unneeded-full-reference-image": "^2.0.0",
    "remark-lint-no-unneeded-full-reference-link": "^2.0.0",
    "remark-lint-no-url-trailing-slash": "^3.0.1",
    "remark-lint-write-good": "^1.2.0",
    "remark-preset-lint-consistent": "^3.0.0",
    "remark-preset-lint-markdown-style-guide": "^3.0.0",
    "remark-preset-lint-recommended": "^4.0.0"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^1.0.0",
    "eslint": "^6.8.0",
    "jsonlint": "^1.6.3",
    "remark-cli": "^8.0.0",
    "shellcheck": "^0.4.2",
    "tap": "^14.10.7",
    "yaml-lint": "^1.2.4"
  }
}
